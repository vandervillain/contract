{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "commonjs",
        "target": "es6",
        "lib": [ "es6", "dom" ],
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node-modules",
        "src/tests"
    ]
}